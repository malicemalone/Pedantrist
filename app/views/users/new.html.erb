<h1>New User Sign-up</h1>
	<%=form_for @user do |f|%>
		<%=f.text_field :username, :placeholder => "Username"%>
		<%=f.text_field :email, :placeholder => "Email"%>
		<%=f.text_field :password_hash, :placeholder => "Password"%>
		<%=f.submit%>
	<%end%>
	<%if session[:errors]%>
		<%=session[:errors]%>
	<%end%>
	<%session.delete(:errors)%>